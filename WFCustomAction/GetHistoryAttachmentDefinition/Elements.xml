<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <WorkflowActions>
    <Action Name="Get History Attachment Name"
        SandboxedFunction="true"
        Assembly="$SharePoint.Project.AssemblyFullName$"
        ClassName="WFCustomAction.GetHistoryAttachment"
        FunctionName="GetHistoryAttachmentName"
        AppliesTo="all"
        UsesCurrentItem="true"
        Category="Sandboxed Workflow Actions">
      <RuleDesigner Sentence="Get history attachment name for %1. Is Dev - %2 (result logged to %3)">
        <FieldBind Field="id" Text="History Item Id" Id="1"
            DesignerType="TextBox" />
        <FieldBind Field="isDev" Text="Is Dev?" Id="2"
            DesignerType="Bool" />
        <FieldBind Field="result" Text="Result" Id="3"
            DesignerType="ParameterNames" />
      </RuleDesigner>
      <Parameters>
        <Parameter Name="__Context"
      Type="Microsoft.SharePoint.WorkflowActions.WorkflowContext, 
              Microsoft.SharePoint.WorkflowActions"
        Direction="In"
        DesignerType="Hide" />
        <Parameter Name="id"
        Type="System.String, mscorlib"
        Direction="In"
        DesignerType="TextBox"
        Description="History Item Id" />
        <Parameter Name="isDev"
        Type="System.Boolean, mscorlib"
        Direction="In"
        Description="Is Dev" />
        <Parameter Name="result"
        Type="System.String, mscorlib"
        Direction="Out"
        DesignerType="ParameterNames"
        Description="Completion Status"/>
      </Parameters>
    </Action>
  </WorkflowActions>
</Elements>
