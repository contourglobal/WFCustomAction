<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <WorkflowActions>
    <Action Name="Set Requirement Final Status"
        SandboxedFunction="true"
        Assembly="$SharePoint.Project.AssemblyFullName$"
        ClassName="WFCustomAction.SetFinalStatus"
        FunctionName="SetReqFinalStatus"
        AppliesTo="all"
        UsesCurrentItem="true"
        Category="Sandboxed Workflow Actions">
      <RuleDesigner Sentence="Set requirement final status for row %1 and %2. Is Dev - %3 (result logged to %4)">
        <FieldBind Field="id" Text="Current Item Id" Id="1"
            DesignerType="TextBox" />
        <FieldBind Field="dueDate" Text="Completed Due Date" Id="2"
            DesignerType="TextBox" />
        <FieldBind Field="isDev" Text="Is Dev?" Id="3"
            DesignerType="Bool" />
        <FieldBind Field="result" Text="Result" Id="4"
            DesignerType="ParameterNames" />
      </RuleDesigner>
      <Parameters>
        <Parameter Name="__Context"
      Type="Microsoft.SharePoint.WorkflowActions.WorkflowContext, 
              Microsoft.SharePoint.WorkflowActions"
        Direction="In"
        DesignerType="Hide" />
        <Parameter Name="id"
        Type="System.String, mscorlib"
        Direction="In"
        DesignerType="TextBox"
        Description="Id of current item" />
        <Parameter Name="dueDate"
        Type="System.String, mscorlib"
        Direction="In"
        DesignerType="TextBox"
        Description="Completed Due Date" />
        <Parameter Name="isDev"
        Type="System.Boolean, mscorlib"
        Direction="In"
        Description="Is Dev" />
        <Parameter Name="result"
        Type="System.String, mscorlib"
        Direction="Out"
        DesignerType="ParameterNames"
        Description="Status"/>
      </Parameters>
    </Action>
  </WorkflowActions>
</Elements>